<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/clip_drawable"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">


    <Button
        android:id="@+id/btn_rotate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="189dp"
        android:background="@drawable/rotate" />

    <EditText
        android:id="@+id/editText"
        style="@style/EditTextCustomHolo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:minHeight="50dp"
        android:text="hoang nha" />

    <ImageView
        android:id="@+id/image_clip"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="44dp"
        android:src="@drawable/clip_drawable" />

    <ProgressBar

        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/btn_rotate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:indeterminate="true"
        android:indeterminateBehavior="repeat"
        android:indeterminateDrawable="@drawable/indeterminate_progress"
        android:interpolator="@android:interpolator/accelerate_decelerate"
        android:max="100"
        android:minHeight="30dp"
        android:progress="50"
        android:progressDrawable="@drawable/progress"
        android:secondaryProgress="70"
        android:thumb="@drawable/seek_bar_item" />
</RelativeLayout>
